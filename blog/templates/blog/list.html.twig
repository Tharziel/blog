{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles : </h1>
    <div class="row">

        {% for article in articles %}
            <div class="card border-primary mb-3 me-2" style="max-width: 20rem;">
                <div class="card-header"> Cr√©e le : {{article.createdAt|date('d/m/Y')}} 
                {% for tag in article.tags %}
                <span class="badge bg-secondary">{{tag.name}}</span>
                {% endfor %}
                </div>
                <div class="card-body">
                    <h4 class="card-title">{{article.title}}</h4>
                    <p class="card-text">{{article.category.name}}</p>
                    <p class="card-text">{{article.content}}</p>
                    <a class="btn btn-secondary" href="{{ path('blog_show', {slug: article.slug}) }}">Voir l'article</a>
                </div>
            </div>
        

        {% endfor %}

    </div>
{% endblock %}
