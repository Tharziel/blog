{% extends 'base.html.twig' %}
{% block title %}Article{% endblock %}

{% block body %}
    <h1>Consulter un article</h1>
    <div class="card border-primary mb-3 me-2" style="max-width: 20rem;">
                <div class="card-header"> Cr√©e le : {{article.createdAt|date('d/m/Y')}}
                {% for tag in article.tags %}
                <span class="badge bg-secondary">{{tag.name}}</span>
                {% endfor %}</div>
                <div class="card-body">
                    <h4 class="card-title">{{article.title}}</h4>
                    <p class="card-text">{{article.category.name}}</p>
                    <p class="card-text">{{article.content}}</p>
                    {% if app.user%}
                    <a class="btn btn-outline-warning" href="{{ path('blog_edit', {slug: article.slug}) }}">Modifier</a> 
                    <a class="btn btn-outline-danger" href="{{ path('blog_delete', {slug: article.slug}) }}">Supprimer</a>
                    {% endif %}
                </div>
            </div>
{% endblock %}