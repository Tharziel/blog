{% extends 'base.html.twig' %}
{% block title %}Article{% endblock %}

{% block body %}
    <h1>Consulter un article</h1>
    <div class="card border-primary mb-3 me-2" style="max-width: 20rem;">
                <div class="card-header"> Cr√©e le : {{article.createdAt|date('d/m/Y')}}</div>
                <div class="card-body">
                    <h4 class="card-title">{{article.title}}</h4>
                    <p class="card-text">{{article.content}}</p>
                    <a class="btn btn-warning" href="{{ path('blog_edit', {slug: article.slug}) }}">Modifier</a> 
                    <a class="btn btn-danger" href="{{ path('blog_delete', {slug: article.slug}) }}">Supprimer</a>
                </div>
            </div>
{% endblock %}